if passed_data != null (
  file "open" passed_data "onlyaccess"
  file "get" 4
  uri = data.str
  image "load" uri passed_data.str
) else (
  say "you need to open a file with this app"
  window "stop"
)
mainloop:
goto 0 0
image passed_data.str

loc -2 2 -20 -20
icon "close" 0.7
if clicked (
  image "clear" uri
  window "stop"
)
